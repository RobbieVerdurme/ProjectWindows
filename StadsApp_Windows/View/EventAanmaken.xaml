<Page
    x:Class="StadsApp_Windows.View.EventAanmaken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StadsApp_Windows.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Naam"/>
            <TextBox x:Name="txtNaamEvent" PlaceholderText="Naam event"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Beschrijving"/>
            <TextBox x:Name="txtBeschrijvingEvent" PlaceholderText="Beschrijving event"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Adres"/>
            <TextBox x:Name="txtAdresEvent" PlaceholderText="Adres event"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Datum"/>
            <CalendarDatePicker x:Name="calDate" />
        </StackPanel>
        <Button Content="Event Toevoegen" Click="EventToevoegen"/>
    </StackPanel>
</Page>
