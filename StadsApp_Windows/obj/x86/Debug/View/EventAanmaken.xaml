<Page
    x:Class="StadsApp_Windows.View.EventAanmaken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StadsApp_Windows.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- VISUALSTATES -->
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup>
            <VisualState>
                <VisualState.StateTriggers>
                    <!-- VisualState to be triggered when window width is >=720 effective pixels -->
                    <AdaptiveTrigger MinWindowWidth="720"/>
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <!--setter voor min pixel 720 -->
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
    
    <!-- -->
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Naam"/>
            <TextBox x:ConnectionId='5' x:Name="txtNaamEvent" PlaceholderText="Naam event"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Beschrijving"/>
            <TextBox x:ConnectionId='4' x:Name="txtBeschrijvingEvent" PlaceholderText="Beschrijving event"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Datum"/>
            <CalendarDatePicker x:ConnectionId='3' x:Name="calDate" />
        </StackPanel>
        <Button x:ConnectionId='2' Content="Event Toevoegen"                       />
    </StackPanel>
</Page>

