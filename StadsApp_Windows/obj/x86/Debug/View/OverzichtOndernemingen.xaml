<Page
    x:Class="StadsApp_Windows.View.OverzichtOndernemingen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:StadsApp_Windows"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <!-- VISUALSTATES -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!-- VisualState to be triggered when window width is >=720 effective pixels -->
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ZoekNaam.Orientation" Value="Horizontal"/>
                        <Setter Target="ZoekType.Orientation" Value="Horizontal"/>
                        <Setter Target="Ondernemingenlijst.Orientation" Value="Horizontal"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <!--  -->
        <StackPanel Orientation="Vertical">
            <Maps:MapControl x:ConnectionId='2' x:Name="MyMap"
                    Height="275"/>
            <StackPanel>
                <TextBlock Text="Vindt hier de onderneming die u zoekt" TextAlignment="Center" FontSize="25px" TextDecorations="Underline"/>
            </StackPanel>
            <StackPanel x:ConnectionId='3' x:Name="ZoekNaam" Orientation="Vertical" HorizontalAlignment="Center" Padding="10" Margin="0 10 0 0">
                <TextBlock Text="Zoek een onderneming op naam:" Padding="0 0 10 0"/>
                <TextBox x:ConnectionId='10' x:Name="txtZoekOnderneming" Width="400px"                                       />
            </StackPanel>
            <StackPanel x:ConnectionId='4' x:Name="ZoekType" Orientation="Vertical" HorizontalAlignment="Center" Padding="10">
                <TextBlock Text="Categorie/Type onderneming" Width="200"/>
                <ComboBox x:ConnectionId='9' Width="200" x:Name="cboSoorten" ItemsSource="{Binding Soorten}"                                            />
            </StackPanel>
            <Button x:ConnectionId='5' x:Name="btnZoekOnderneming" Content="Zoek"                                  HorizontalAlignment="Center" Margin="0 10 0 0"/>
            <StackPanel x:ConnectionId='6' x:Name="Ondernemingenlijst" Orientation="Vertical">
                <ListView x:ConnectionId='7' x:Name="lvOndernemingen" ItemsSource="{Binding GefilterdeLijst}">
                     <!--<StackPanel Orientation="Horizontal">
                        <TextBlock Text="Categorie/Type onderneming" Width="200"/>
                        <ComboBox Width="200" x:Name="cboSoort" ItemsSource="{Binding Soorten}" SelectedValue="Alle"/>
                    </StackPanel>-->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:ConnectionId='8'                                       >
                                <TextBlock Text="{Binding Naam}"/>
                                <!--<TextBlock Text="{Binding Adres}"/>-->
                                <TextBlock Text="{Binding Soort}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

