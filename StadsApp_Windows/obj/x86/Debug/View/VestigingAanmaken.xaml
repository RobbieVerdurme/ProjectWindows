<Page
    x:Class="StadsApp_Windows.View.VestigingAanmaken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StadsApp_Windows.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <!-- VISUALSTATES -->
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup>
            <VisualState>
                <VisualState.StateTriggers>
                    <!-- VisualState to be triggered when window width is >=720 effective pixels -->
                    <AdaptiveTrigger MinWindowWidth="720"/>
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <!-- setter for less then 720 pixels-->
                    <Setter Target="NaamVestinging.Orientation" Value="Horizontal"/>
                    <Setter Target="AdresVestiging.Orientation" Value="Horizontal"/>
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
    
    <!-- -->
    <StackPanel>
        <StackPanel>
            <TextBlock Text="Maak hier een vestiging aan" FontSize="25" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:ConnectionId='2' x:Name="NaamVestinging" Orientation="Vertical" Padding="10" HorizontalAlignment="Center">
            <TextBlock Text="Naam vestiging:" Padding="10" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='6' x:Name="txtNaam" Width="400"/>
        </StackPanel>
        <StackPanel x:ConnectionId='3' x:Name="AdresVestiging" Orientation="Vertical" Padding="10" HorizontalAlignment="Center">
            <TextBlock Text="Adres van vestiging:" Padding="10" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='5' x:Name="txtAdres" Width="400"/>
        </StackPanel>
        <Button x:ConnectionId='4' Content="Vestiging opslaan"                          HorizontalAlignment="Center"/>
    </StackPanel>
</Page>

